#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/ts-node-cwd" ]; then
  "$basedir/ts-node-cwd"  "$basedir/../@sap/cds-dk/bin/cds-ts.js" "$@"
  ret=$?
else 
  ts-node-cwd  "$basedir/../@sap/cds-dk/bin/cds-ts.js" "$@"
  ret=$?
fi
exit $ret
